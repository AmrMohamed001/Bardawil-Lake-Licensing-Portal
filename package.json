{
  "name": "bardawil-lake-licensing-portal",
  "version": "1.0.0",
  "description": "Digital licensing system for Bardawil Lake fishermen and boat operators. Full-stack application with JWT authentication, document management, Supply Order generation, and configurable pricing for multiple license categories.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:cluster": "node src/cluster.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "reload:prod": "pm2 reload ecosystem.config.js --env production",
    "stop:prod": "pm2 stop ecosystem.config.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:load": "node tests/load-test.js"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "author": "Amr mohamed",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.17.2",
    "pg-hstore": "^2.3.4",
    "redis": "^5.10.0",
    "sequelize": "^6.37.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "autocannon": "^8.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "pm2": "^6.0.14"
  }
}
