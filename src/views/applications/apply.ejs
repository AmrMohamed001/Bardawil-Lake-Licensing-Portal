          // Validate single field on blur
          function validateField(field) {
            const errorEl = document.getElementById(field.name + 'Error');
            let isValid = true;
            let errorMsg = '';

            if (field.required) {
              if (field.type === 'file') {
                if (!field.files || field.files.length === 0) {
                  isValid = false;
                  errorMsg = 'هذا الملف مطلوب';
                }
              } else if (!field.value.trim()) {
                isValid = false;
                errorMsg = 'هذا الحقل مطلوب';
              }
            }

            if (errorEl) {
              errorEl.textContent = errorMsg;
              errorEl.classList.toggle('show', !isValid);
            }

            field.classList.toggle('invalid', !isValid);

            // Update Next button state
            updateNextButtonState();

            return isValid;
          }

          // Add blur validation to all required fields
          function addBlurValidation() {
            const fields = document.querySelectorAll('#step3 [required]');
            fields.forEach(field => {
              field.addEventListener('blur', () => validateField(field));
            });
          }

          // Update Next button state based on validation
          function updateNextButtonState() {
            const currentStepEl = document.getElementById(`step${currentStep}`);
            if (!currentStepEl) return;

            const nextBtn = currentStepEl.querySelector('.btn-next');
            if (!nextBtn) return;

            const requiredFields = currentStepEl.querySelectorAll('[required]');
            let allValid = true;

            requiredFields.forEach(field => {
              if (field.type === 'file') {
                if (!field.files || field.files.length === 0) allValid = false;
              } else if (field.type === 'radio') {
                const radioGroup = document.querySelectorAll(`input[name="${field.name}"]:checked`);
                if (radioGroup.length === 0) allValid = false;
              } else if (!field.value.trim()) {
                allValid = false;
              }
            });

            nextBtn.disabled = !allValid;
          }

          // Function to update dynamic price display
          // Global variable to store dynamically loaded prices
          let licensePrices = {};

          // Load prices from API on page load
          async function loadPricesFromAPI() {
            try {
              const response = await api.get('/public/prices');
              if (response.data && response.data.data && response.data.data.prices) {
                const prices = response.data.data.prices;

                // Build price lookup object: category -> { duration -> price }
                // New format: each record has a 'prices' object with calculated values
                prices.forEach(priceRecord => {
                  const key = (priceRecord.category || '').trim(); // Remove leading/trailing spaces
                  if (!licensePrices[key]) {
                    licensePrices[key] = {};
                  }

                  // priceRecord.prices is an object like { '3_months': 600, '6_months': 1200, 'season': 1800 }
                  if (priceRecord.prices) {
                    Object.assign(licensePrices[key], priceRecord.prices);
                  }
                });

                console.log('Prices loaded successfully:', licensePrices);
              }
            } catch (error) {
              console.error('Failed to load prices:', error);
              // Fallback to showing message if prices can't be loaded
            }
          }

          // Call price loading on page load
          loadPricesFromAPI();

          function updateDynamicPrice() {
            const applicationType = document.querySelector('input[name="applicationType"]:checked')?.value;
            const licenseCategory = document.getElementById('licenseCategorySelect').value;
            const duration = document.getElementById('durationSelect').value;

            const priceDisplayGroup = document.getElementById('priceDisplayGroup');
            const dynamicPriceDisplay = document.getElementById('dynamicPriceDisplay');

            if (!applicationType || !licenseCategory) {
              priceDisplayGroup.style.display = 'none';
