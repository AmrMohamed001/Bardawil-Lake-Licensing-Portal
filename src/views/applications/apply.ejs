            if (documents.length === 0) {
              dynamicDocsContainer.innerHTML = '<p class="text-muted">لا توجد مستندات مطلوبة لهذا النوع</p>';
              return;
            }

            let html = `<h3><i class="fas fa-folder-open"></i> المستندات المطلوبة لـ ${category}</h3><div class="documents-grid">`;

            documents.forEach(doc => {
              const required = doc.isRequired ? '<span class="required-star">*</span>' : '';
              const helpText = doc.helpText || 'اسحب الملف أو اضغط للرفع';

              if (doc.inputType === 'file') {
                html += `
                  <div class="document-upload" data-doc-code="${doc.documentCode}">
                    <label class="upload-area">
                      <input type="file" name="${doc.documentCode}" accept="image/*,.pdf" 
                        ${doc.isRequired ? 'required' : ''}
                        onchange="handleFileUpload(this, '${doc.documentCode}Preview')"
                        onblur="validateField(this)" />
                      <div class="upload-content">
                        <i class="fas fa-file-alt"></i>
                        <span>${doc.documentNameAr} ${required}</span>
                        <small>${helpText}</small>
                      </div>
                      <div id="${doc.documentCode}Preview" class="upload-preview"></div>
                    </label>
                    <div class="field-error" id="${doc.documentCode}Error"></div>
                  </div>
