            'أفراد شركات': 'تصريح أفراد شركات',
          };

          // Load required documents from API based on category
          async function loadRequiredDocuments(category) {
            const serviceCategory = serviceDocumentMapping[category];
            if (!serviceCategory) return;

            try {
              const response = await axios.get(`/api/v1/public/required-documents/${encodeURIComponent(serviceCategory)}`);
              const documents = response.data.data.documents;
              renderDynamicDocuments(documents, category);
            } catch (error) {
              console.error('Error loading required documents:', error);
