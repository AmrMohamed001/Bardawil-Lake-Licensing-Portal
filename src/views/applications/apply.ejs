              } else if (doc.inputType === 'text') {
                html += `
                  <div class="document-upload text-input" data-doc-code="${doc.documentCode}">
                    <label class="form-label">${doc.documentNameAr} ${required}</label>
                    <input type="text" name="${doc.documentCode}" class="form-control"
                      ${doc.isRequired ? 'required' : ''}
                      placeholder="${doc.documentNameEn || ''}"
                      onblur="validateField(this)" />
                    <div class="field-error" id="${doc.documentCode}Error"></div>
