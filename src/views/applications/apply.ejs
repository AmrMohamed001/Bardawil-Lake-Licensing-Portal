            // Fetch price from loaded prices data
            const categoryPrices = licensePrices[licenseCategory];
            let finalPrice = 0;

            if (categoryPrices) {
              // Try to get price for selected duration, fallback to 3_months or season
              finalPrice = categoryPrices[duration] || categoryPrices['3_months'] || categoryPrices['season'] || 0;
            }

            if (finalPrice > 0) {
              priceDisplayGroup.style.display = 'block';
              dynamicPriceDisplay.textContent = `${finalPrice.toLocaleString('ar-EG')} ج.م`;
            } else {
              priceDisplayGroup.style.display = 'none';
