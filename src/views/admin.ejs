<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>لوحة الإدارة - منصة تراخيص بحيرة البردويل</title>
  
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" type="image/png" href="/imgs/logo.png">
</head>
<body>

<div class="admin-page">
  <div class="admin-container">
    
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <div class="sidebar-header">
        <a href="/"><img src="/imgs/logo.png" alt="بحيرة البردويل" class="sidebar-logo"></a>
        <h3>لوحة الإدارة</h3>
      </div>
      
      <nav class="sidebar-nav">
        <a href="/admin-dashboard" class="sidebar-link active">
          <i class="fas fa-tachometer-alt"></i>
          <span>الرئيسية</span>
        </a>
        
        <a href="/admin/applications" class="sidebar-link">
          <i class="fas fa-file-alt"></i>
          <span>الطلبات</span>
        </a>
        
        <a href="/admin/pricing" class="sidebar-link">
          <i class="fas fa-tags"></i>
          <span>الأسعار</span>
        </a>
        
        <% if (user.role === 'super_admin') { %>
          <a href="/admin/audit-logs" class="sidebar-link">
            <i class="fas fa-history"></i>
            <span>سجل العمليات</span>
          </a>
        <% } %>
        
        <hr class="sidebar-divider">
        
        <a href="/" class="sidebar-link">
          <i class="fas fa-home"></i>
          <span>الصفحة الرئيسية</span>
        </a>
        
        <a href="#" class="sidebar-link" id="logoutBtn">
          <i class="fas fa-sign-out-alt"></i>
          <span>تسجيل الخروج</span>
        </a>
      </nav>
    </aside>
    
    <!-- Main Content -->
    <main class="admin-main">
      
      <div class="admin-header">
        <h1>لوحة التحكم</h1>
        <p>مرحباً <%= user.firstNameAr %>! إليك نظرة عامة على النظام</p>
      </div>
      
      <!-- Stats Cards -->
      <div class="admin-stats">
        <div class="admin-stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);">
            <i class="fas fa-file-alt"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats?.totalApplications || 0 %></h3>
            <p>إجمالي الطلبات</p>
          </div>
        </div>
        
        <div class="admin-stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats?.pendingApplications || 0 %></h3>
            <p>بانتظار المراجعة</p>
          </div>
        </div>
        
        <div class="admin-stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats?.approvedApplications || 0 %></h3>
            <p>تمت الموافقة</p>
          </div>
        </div>
        
        <div class="admin-stat-card">
          <div class="stat-icon" style="background: linear-gradient(135deg, #00897B 0%, #00695C 100%);">
            <i class="fas fa-users"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats?.totalUsers || 0 %></h3>
            <p>المستخدمين</p>
          </div>
        </div>
      </div>
      
      <!-- Recent Applications -->
      <div class="admin-section">
        <div class="section-hdr">
          <h2><i class="fas fa-list-alt"></i> آخر الطلبات</h2>
          <a href="/admin/applications" class="btn btn-outline-primary">عرض الكل</a>
        </div>
        
        <div class="card">
          <% if (recentApplications && recentApplications.length > 0) { %>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>رقم الطلب</th>
                    <th>مقدم الطلب</th>
                    <th>نوع الترخيص</th>
                    <th>تاريخ التقديم</th>
                    <th>الحالة</th>
                    <th>الإجراءات</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentApplications.forEach(app => { %>
                    <tr>
                      <td><strong><%= app.applicationNumber %></strong></td>
                      <td><%= app.applicant?.firstNameAr %> <%= app.applicant?.lastNameAr %></td>
                      <td>
                        <% if (app.applicationType === 'fisherman') { %>
                          <i class="fas fa-fish" style="color: #2196F3;"></i> صياد
                        <% } else if (app.applicationType === 'boat') { %>
                          <i class="fas fa-ship" style="color: #00897B;"></i> مركب
                        <% } else if (app.applicationType === 'vehicle') { %>
                          <i class="fas fa-truck" style="color: #FF9800;"></i> سيارة
                        <% } else { %>
                          <%= app.applicationType %>
                        <% } %>
                      </td>
                      <td><%= new Date(app.createdAt).toLocaleDateString('ar-EG') %></td>
                      <td>
                        <%- include('partials/status-badge', { status: app.status }) %>
                      </td>
                      <td>
                        <a href="/admin/applications/<%= app.id %>" class="btn-icon" title="مراجعة">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="empty-state">
              <i class="fas fa-folder-open"></i>
              <h3>لا توجد طلبات</h3>
              <p>لا توجد طلبات حالياً</p>
            </div>
          <% } %>
        </div>
      </div>
      
    </main>
    
  </div>
</div>

<style>
.admin-page {
  min-height: 100vh;
  background: #F5F7FA;
}

.admin-container {
  display: flex;
  min-height: 100vh;
}

.admin-sidebar {
  width: 260px;
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
  color: white;
  position: fixed;
  top: 0;
  right: 0;
  height: 100vh;
  overflow-y: auto;
  z-index: 50;
}

.sidebar-header {
  padding: 1.5rem;
  text-align: center;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.sidebar-logo {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: white;
  padding: 8px;
  margin-bottom: 0.75rem;
}

.sidebar-header h3 {
  font-size: 1.125rem;
  font-weight: 600;
  margin: 0;
}

.sidebar-nav {
  padding: 1rem 0;
}

.sidebar-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1.5rem;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  transition: all 0.2s;
}

.sidebar-link:hover,
.sidebar-link.active {
  background: rgba(255, 255, 255, 0.1);
  color: white;
}

.sidebar-link.active {
  border-right: 3px solid white;
}

.sidebar-link i {
  width: 20px;
  text-align: center;
}

.sidebar-divider {
  margin: 1rem 1.5rem;
  border: none;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.admin-main {
  flex: 1;
  margin-right: 260px;
  padding: 2rem;
}

.admin-header {
  margin-bottom: 2rem;
}

.admin-header h1 {
  font-size: 2rem;
  font-weight: 700;
  color: #212121;
  margin-bottom: 0.25rem;
}

.admin-header p {
  color: #757575;
  font-size: 1rem;
}

.admin-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.admin-stat-card {
  background: white;
  border-radius: 1rem;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.admin-stat-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

.stat-icon {
  width: 60px;
  height: 60px;
  border-radius: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.5rem;
}

.stat-info h3 {
  font-size: 1.75rem;
  font-weight: 700;
  color: #212121;
  margin-bottom: 0;
}

.stat-info p {
  color: #757575;
  font-size: 0.9375rem;
  margin: 0;
}

.admin-section {
  margin-bottom: 2rem;
}

.section-hdr {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.section-hdr h2 {
  font-size: 1.5rem;
  font-weight: 700;
  color: #212121;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.section-hdr h2 i {
  color: #1e3c72;
}

.table-responsive { overflow-x: auto; }
.table { width: 100%; border-collapse: collapse; }
.table th, .table td { padding: 1rem 1.5rem; text-align: right; }
.table th { background: #FAFAFA; font-weight: 600; color: #757575; font-size: 0.875rem; white-space: nowrap; }
.table tbody tr { border-bottom: 1px solid #eee; transition: background 0.2s; }
.table tbody tr:hover { background: #FAFAFA; }

.btn-icon { width: 36px; height: 36px; border-radius: 0.5rem; display: inline-flex; align-items: center; justify-content: center; color: #1e3c72; background: #E3F2FD; text-decoration: none; transition: all 0.2s; }
.btn-icon:hover { background: #1e3c72; color: white; }

.empty-state { text-align: center; padding: 4rem 2rem; color: #757575; }
.empty-state i { font-size: 4rem; margin-bottom: 1rem; opacity: 0.3; }
.empty-state h3 { font-size: 1.5rem; margin-bottom: 0.5rem; color: #424242; }

.card { background: white; border-radius: 1rem; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); overflow: hidden; }

@media (max-width: 1200px) { .admin-stats { grid-template-columns: repeat(2, 1fr); } }

@media (max-width: 1024px) {
  .admin-sidebar { width: 80px; }
  .sidebar-header h3, .sidebar-link span { display: none; }
  .sidebar-link { justify-content: center; padding: 1rem; }
  .admin-main { margin-right: 80px; }
}

@media (max-width: 768px) {
  .admin-sidebar { display: none; }
  .admin-main { margin-right: 0; padding: 1rem; }
  .admin-stats { grid-template-columns: 1fr; }
}
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.2/axios.min.js"></script>
<script>
document.getElementById('logoutBtn')?.addEventListener('click', async function(e) {
  e.preventDefault();
  try {
    await axios.post('/api/v1/auth/logout', {}, { withCredentials: true });
    window.location.href = '/login';
  } catch (err) {
    console.error('Logout error:', err);
  }
});
</script>
</body>
</html>
