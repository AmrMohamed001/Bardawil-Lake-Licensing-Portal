<!-- Admin Sidebar Navigation -->
<aside class="w-64 bg-primary text-white hidden md:flex flex-col min-h-screen">
  <div class="p-6 text-2xl font-bold border-b border-blue-800">لـوحـة الإدارة</div>
  <nav class="flex-1 p-4 space-y-2">
    <a href="/admin-dashboard" class="block py-3 px-4 rounded <%= currentPage === 'dashboard' ? 'bg-blue-900 border-r-4 border-accent font-semibold' : 'hover:bg-blue-800' %> transition">
      ملخص البيانات
    </a>
    <a href="/admin/applications" class="block py-3 px-4 rounded <%= currentPage === 'applications' ? 'bg-blue-900 border-r-4 border-accent font-semibold' : 'hover:bg-blue-800' %> transition">
      الطلبات
      <% if (locals.pendingCount && pendingCount > 0) { %>
        <span class="bg-red-500 text-xs px-2 py-1 rounded-full mr-2"><%= pendingCount %></span>
      <% } %>
    </a>
    <a href="/admin/pricing" class="block py-3 px-4 rounded <%= currentPage === 'pricing' ? 'bg-blue-900 border-r-4 border-accent font-semibold' : 'hover:bg-blue-800' %> transition">
      إعدادات التسعير
    </a>
    <% if (locals.user && user.role === 'super_admin') { %>
    <a href="/admin/audit-logs" class="block py-3 px-4 rounded <%= currentPage === 'audit' ? 'bg-blue-900 border-r-4 border-accent font-semibold' : 'hover:bg-blue-800' %> transition">
      سجل النشاطات
    </a>
    <% } %>
    <a href="/admin/reports" class="block py-3 px-4 rounded <%= currentPage === 'reports' ? 'bg-blue-900 border-r-4 border-accent font-semibold' : 'hover:bg-blue-800' %> transition">
      التقارير
    </a>
  </nav>
  <div class="p-4 border-t border-blue-800">
    <button id="logoutBtnAdmin" class="w-full py-2 bg-red-600 hover:bg-red-700 rounded transition">تسجيل الخروج</button>
  </div>
</aside>
