<!-- Admin Sidebar Navigation -->
<aside class="admin-sidebar" id="adminSidebar">
  <div class="sidebar-header">
    <div class="sidebar-brand">
      <div class="brand-icon">
        <i class="fas fa-water"></i>
      </div>
      <div class="brand-text">
        <div class="brand-title">لوحة الإدارة</div>
        <div class="brand-subtitle">بحيرة البردويل</div>
      </div>
    </div>
    <button class="sidebar-close" onclick="toggleSidebar()">
      <i class="fas fa-times"></i>
    </button>
  </div>

  <nav class="sidebar-nav">
    <!-- Home Link -->
    <a href="/" class="sidebar-link <%= currentPage === 'home' ? 'active' : '' %>">
      <div class="link-icon">
        <i class="fas fa-home"></i>
      </div>
      <span class="link-text">الصفحة الرئيسية</span>
      <div class="link-arrow">
        <i class="fas fa-chevron-left"></i>
      </div>
    </a>

    <!-- Dashboard -->
    <a href="/admin-dashboard" class="sidebar-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
      <div class="link-icon">
        <i class="fas fa-tachometer-alt"></i>
      </div>
      <span class="link-text">ملخص البيانات</span>
      <div class="link-arrow">
        <i class="fas fa-chevron-left"></i>
      </div>
    </a>

    <!-- Applications -->
    <a href="/admin/applications" class="sidebar-link <%= currentPage === 'applications' ? 'active' : '' %>">
      <div class="link-icon">
        <i class="fas fa-file-alt"></i>
      </div>
      <span class="link-text">الطلبات</span>
      <% if (locals.pendingCount && pendingCount> 0) { %>
        <span class="sidebar-badge pulse">
          <%= pendingCount %>
        </span>
        <% } %>
          <div class="link-arrow">
            <i class="fas fa-chevron-left"></i>
          </div>
    </a>

    <!-- License Review -->
    <a href="/admin/license-review" class="sidebar-link <%= currentPage === 'license-review' ? 'active' : '' %>">
      <div class="link-icon">
        <i class="fas fa-id-card-clip"></i>
      </div>
      <span class="link-text">مراجعة التراخيص</span>
      <div class="link-arrow">
        <i class="fas fa-chevron-left"></i>
      </div>
    </a>

    <!-- Financial Department -->
    <% if (locals.user && (user.role==='FINANCIAL_DEPT' || user.role==='financial_dept' || user.role==='SUPER_ADMIN' ||
      user.role==='super_admin' )) { %>
      <a href="/financial/dashboard" class="sidebar-link <%= currentPage === 'financial' ? 'active' : '' %>">
        <div class="link-icon">
          <i class="fas fa-coins"></i>
        </div>
        <span class="link-text">القسم المالي</span>
        <% if (locals.financialPendingCount && financialPendingCount> 0) { %>
          <span class="sidebar-badge pulse" style="background: #ffc107;">
            <%= financialPendingCount %>
          </span>
          <% } %>
            <div class="link-arrow">
              <i class="fas fa-chevron-left"></i>
            </div>
      </a>
      <% } %>

        <!-- News -->
        <a href="/admin/news" class="sidebar-link <%= currentPage === 'news' ? 'active' : '' %>">
          <div class="link-icon">
            <i class="fas fa-newspaper"></i>
          </div>
          <span class="link-text">الأخبار</span>
          <div class="link-arrow">
            <i class="fas fa-chevron-left"></i>
          </div>
        </a>

        <!-- Pricing -->
        <a href="/admin/pricing" class="sidebar-link <%= currentPage === 'pricing' ? 'active' : '' %>">
          <div class="link-icon">
            <i class="fas fa-tags"></i>
          </div>
          <span class="link-text">إعدادات التسعير</span>
          <div class="link-arrow">
            <i class="fas fa-chevron-left"></i>
          </div>
        </a>

        <!-- Users -->
        <a href="/admin/users" class="sidebar-link <%= currentPage === 'users' ? 'active' : '' %>">
          <div class="link-icon">
            <i class="fas fa-users"></i>
          </div>
          <span class="link-text">المستخدمين</span>
          <div class="link-arrow">
            <i class="fas fa-chevron-left"></i>
          </div>
        </a>

        <% if (locals.user && (user.role==='SUPER_ADMIN' || user.role==='super_admin' )) { %>
          <div class="sidebar-divider"></div>
          <div class="sidebar-section-title">
            <i class="fas fa-crown"></i>
            <span>صلاحيات خاصة</span>
          </div>

          <!-- Audit Logs -->
          <a href="/admin/audit-logs" class="sidebar-link <%= currentPage === 'audit' ? 'active' : '' %>">
            <div class="link-icon">
              <i class="fas fa-history"></i>
            </div>
            <span class="link-text">سجل النشاطات</span>
            <div class="link-arrow">
              <i class="fas fa-chevron-left"></i>
            </div>
          </a>

          <!-- Advanced Statistics -->
          <a href="/super-admin-dashboard"
            class="sidebar-link <%= currentPage === 'super-dashboard' ? 'active' : '' %>">
            <div class="link-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <span class="link-text">الإحصائيات المتقدمة</span>
            <div class="link-arrow">
              <i class="fas fa-chevron-left"></i>
            </div>
          </a>
          <% } %>
  </nav>

