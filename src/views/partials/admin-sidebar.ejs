<script>
  function toggleSidebar() {
    const sidebar = document.getElementById('adminSidebar');
    const overlay = document.getElementById('sidebarOverlay');
    const icon = document.getElementById('toggleIcon');
    const isMobile = window.innerWidth <= 768;

    // Toggle classes
    sidebar.classList.toggle('show');
    sidebar.classList.toggle('closed');

    // Update body class
    if (sidebar.classList.contains('show') && !isMobile) {
      document.body.classList.add('sidebar-open');
      document.body.classList.remove('sidebar-closed');
    } else {
      document.body.classList.remove('sidebar-open');
      document.body.classList.add('sidebar-closed');
    }

    // Toggle overlay (mobile only)
    if (isMobile) {
      overlay.classList.toggle('show');
    } else {
      overlay.classList.remove('show');
    }

    // Animate icon
    if (sidebar.classList.contains('closed')) {
      icon.classList.remove('fa-times');
      icon.classList.add('fa-bars');
    } else {
      icon.classList.remove('fa-bars');
      icon.classList.add('fa-times');
    }

    // Save preference
    localStorage.setItem('sidebarOpen', sidebar.classList.contains('show'));
  }

  // Immediate Layout Restoration (prevents CLS)
  (function () {
    const savedState = localStorage.getItem('sidebarOpen');
    const isMobile = window.innerWidth <= 768;
    const sidebar = document.getElementById('adminSidebar');
    const icon = document.getElementById('toggleIcon');

    // Prevent transitions during initial load
    sidebar.style.transition = 'none';
    document.body.style.transition = 'none';

    if (isMobile) {
      // Mobile default: Closed
      sidebar.classList.add('closed');
      sidebar.classList.remove('show');
      document.body.classList.add('sidebar-closed');
      if (icon) {
        icon.classList.remove('fa-times');
        icon.classList.add('fa-bars');
      }
    } else {
      // Desktop
      if (savedState === 'false') {
        sidebar.classList.add('closed');
        sidebar.classList.remove('show');
        document.body.classList.add('sidebar-closed');
        document.body.classList.remove('sidebar-open');
        if (icon) {
          icon.classList.remove('fa-times');
          icon.classList.add('fa-bars');
        }
      } else {
        sidebar.classList.remove('closed');
        sidebar.classList.add('show');
        document.body.classList.remove('sidebar-closed');
        document.body.classList.add('sidebar-open');
        if (icon) {
          icon.classList.remove('fa-bars');
          icon.classList.add('fa-times');
        }
      }
    }

    // Re-enable transitions after a brief delay
    // Using setTimeout ensures this runs after the current paint cycle (if any)
    // or simply after the styling is applied.
    setTimeout(() => {
      sidebar.style.transition = '';
      document.body.style.transition = '';
    }, 100);
  })();

  // Keep re-checking on load just in case (optional, but safe)
  document.addEventListener('DOMContentLoaded', function () {
    // Ensure icon state matches if script ran too early for icon element?
    // The script above is at the END of partial, so elements usually exist if simpler DOM.
    // But 'toggleIcon' button is defined AFTER the sidebar in the partial?
    // Let's check the partial structure.
  });

  // Handle window resize
  let resizeTimer;
  window.addEventListener('resize', function () {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(function () {
      const sidebar = document.getElementById('adminSidebar');
      const overlay = document.getElementById('sidebarOverlay');
      const isMobile = window.innerWidth <= 768;

      if (isMobile) {
        // Mobile: close sidebar and show overlay when needed
        overlay.classList.remove('show');
        document.body.classList.add('sidebar-closed');
        document.body.classList.remove('sidebar-open');
      } else {
        // Desktop: restore saved state
        overlay.classList.remove('show');
        if (sidebar.classList.contains('show')) {
          document.body.classList.add('sidebar-open');
          document.body.classList.remove('sidebar-closed');
        }
      }
    }, 100);
  });

  // Logout functionality
  document.getElementById('logoutBtnAdmin')?.addEventListener('click', async function () {
    this.classList.add('loading');
    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span>جاري تسجيل الخروج...</span>';

    try {
      await axios.post('/api/v1/auth/logout', {}, { withCredentials: true });
      window.location.href = '/login';
    } catch (err) {
      console.error('Logout error:', err);
      this.classList.remove('loading');
      this.innerHTML = '<i class="fas fa-sign-out-alt"></i> <span>تسجيل الخروج</span>';
      alert('حدث خطأ في تسجيل الخروج. يرجى المحاولة مرة أخرى.');
    }
  });

  // Close sidebar when clicking a link on mobile
