                <script>
                    function showDocs(btn) {
                        const card = btn.closest('.service-card');
                        const serviceName = card.dataset.service;
                        const docs = card.dataset.docs.split('|');

                        document.getElementById('modalServiceName').textContent = serviceName;
                        const docsList = document.getElementById('modalDocsList');
                        docsList.innerHTML = docs.map(doc => `<li>${doc}</li>`).join('');

                        document.getElementById('docsModal').classList.add('show');
                        document.body.style.overflow = 'hidden';
                    }

                    function closeDocs(event) {
                        if (event && event.target !== event.currentTarget) return;
                        document.getElementById('docsModal').classList.remove('show');
                        document.body.style.overflow = '';
                    }

                    // Close modal on Escape key
                    document.addEventListener('keydown', function (e) {
                        if (e.key === 'Escape') closeDocs();
                    });

                    // Handle scroll to category from URL params
                    document.addEventListener('DOMContentLoaded', function () {
                        const urlParams = new URLSearchParams(window.location.search);
                        const category = urlParams.get('category');

                        if (category) {
                            const element = document.getElementById(category);
                            if (element) {
                                // Add a small delay to ensure page layout is settled
                                setTimeout(() => {
                                    element.scrollIntoView({ behavior: 'smooth', block: 'start' });
                                    // Add temporary highlight effect
                                    element.style.transition = 'background-color 0.5s ease';
                                    const originalBg = element.style.backgroundColor;
                                    element.style.backgroundColor = 'rgba(30, 60, 114, 0.05)';
                                    setTimeout(() => {
                                        element.style.backgroundColor = originalBg;
                                    }, 2000);
                                }, 100);
                            }
                        }
                    });
                </script>
